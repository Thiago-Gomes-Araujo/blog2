<%= link_to "New category", new_category_path, class:'btn btn-primary'%>
<br><br>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>NAME</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>

  <% @categories.each do |category| %>

  <tr>
      <td><%= category.name %> </td>
      <td>
        <div style="display: inline-block">
          <%= button_to 'Show', category, class: 'btn btn-secondary' %>
        </div>
        <div style="display: inline-block">
          <%= button_to 'Edit', edit_category_path(category), class: 'btn btn-secondary' %>
        </div>
        <div style="display: inline-block">
          <%= button_to 'Destroy', category, method: :delete , class:'btn btn-danger'%>
        </div>
      </td>
  </tr>
  <% end %>
  </tbody>
</table>

