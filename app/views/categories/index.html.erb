<%= link_to "New category", new_category_path, class:'btn btn-success'%>
<br><br>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>

  <% @categories.each do |category| %>

  <tr>
      <td><%= category.name %> </td>
      <td>
        <div style="display: inline-block">
          <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-primary' %>
        </div>
            <div style="display: inline-block">
            <%= button_to 'Destroy', category, method: :delete,
            data: { "turbo-confirm": 'Are you Sure?'}, class:'btn btn-danger'%>
        </div>
      </td>
  </tr>
  <% end %>
  </tbody>
</table>

