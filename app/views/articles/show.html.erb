<article class="blog-post">
    <h2 class="display-5 link-body-emphasis mb-1"><%= @article.title%></h2>
    <p class="blog-post-meta"><%= date(@article.created_at)%> by <a href="#">Chris</a></p>
    <p><%= @article.body %></p>
    <div style="display: inline-block; margin-top: 30px">
    <%= link_to 'Edit  ', edit_article_path(@article), class: 'btn btn-secondary' %>
    </div>
    <div style="display: inline-block; margin-top: 30px">
		<%= button_to 'Destroy', article_path(@article),
        method: :delete,
        data: { "turbo-confirm": 'Are you Sure?'}, class:'btn btn-danger'%>
    </div>
    <div style="display: inline-block; margin-top: 30px">
    <%= link_to 'Back', root_path, class: 'btn btn-secondary'%>
    </div>
    <p>
</article>